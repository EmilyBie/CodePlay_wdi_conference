<%= render partial: "addevents" %>
<%= render partial: "editevent" %>
<div class="events-application-container">
        <nav class="nav">
          <div class="burger">
            <div class="burger__patty"></div>
          </div>

          <ul class="nav__list">
            <li class="nav__item">
              <a href="#1" class="nav__link c-blue"><i class="fa fa-camera-retro"></i></a>
            </li>
            <li class="nav__item">
              <a href="#2" class="nav__link c-yellow scrolly"><i class="fa fa-bolt"></i></a>
            </li>
            <li class="nav__item">
              <a href="#3" class="nav__link c-red"><i class="fa fa-music"></i></a>
            </li>
            <li class="nav__item">
              <a href="#4" class="nav__link c-green"><i class="fa fa-paper-plane"></i></a>
            </li>
          </ul>
        </nav>

        <section class="panel b-blue" id="1">
          <article class="panel__wrapper">
            <div class="panel__content">
              <h1 class="panel__headline"><i class="fa fa-camera-retro"></i>&nbsp;Events</h1>
              <div class="panel__block"></div>
       <!--============================events ================================  -->
                    <div class="events-handler">
                      <button class="add-event-btn"><i class="fa fa-plus" aria-hidden="true"></i>Add Event</button>
                      <% if @events.length != 0 %>
                        <table>
                          <tr>
                            <th class="event-name-td">Event Name</th>
                            <th class="event-time-td">Event Time</th>
                            <th>Actions</th>
                          </tr>
                          <% @events.each do |event| %>
                            <tr class="admin-event-list" data-event-id="<%= event.id %>">
                              <td class="event-name-td"><%= event.name %></td>
                              <td class="event-time-td"><%= event.time.to_formatted_s(:long)  %></td>
                              <td>
                                <button class="event-edit-btn"><i class="fa fa-pencil-square-o fa-2x" aria-hidden="true"></i><span class="edit-hover">edit</span></button>
                                <form action="/events/<%= event.id %>" method="post">
                                  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
                                   <input type="hidden" value="delete" name="_method">
                                   <button class="event-delete-tbn"><i class="fa fa-trash fa-2x" aria-hidden="true"></i><span class="delete-hover">delete</span></button>
                                </form>
                              </td>
                            <tr>
                          <% end %>
                        </table>
                      <% else %>
                        <p class="no-event-msg">There's no event, add event please.</p>
                      <% end %>
                    </div>
                  <!--=============================================================  -->
            </div>
          </article>
        </section>
        <section class="panel b-yellow" id="2">
          <article class="panel__wrapper">
            <div class="panel__content">
              <h1 class="panel__headline"><i class="fa fa-bolt"></i>&nbsp;Appending applications</h1>
              <div class="panel__block"></div>
                 <!--=========================appending applications================================-->
                 <div class="applying-users-handler">
                   <% if @event_speakers.length != 0 %>
                     <table class="applying-list">
                       <tr>
                         <th>Name</th>
                         <th>Topic</th>
                         <th>Content</th>
                         <th>Event</th>
                         <th>Time</th>
                         <th>Actions</th>
                       </tr>
                       <% @event_speakers.each do | event_speaker | %>
                         <tr class="applying-item" data-event-speaker-id="<%= event_speaker.id%>">
                           <td class="applying-user-name"><%= event_speaker.user.name %></td>
                           <td class="applying-topic"><%= event_speaker.topic %></td>
                           <td  class="applying-content"><%= event_speaker.content%></td>
                           <td  class="applying-event-name"><%= event_speaker.event.name%></td>
                           <td class="talk-time-schedule">
                             <input type="time" class="schedule-time">
                           </td>
                           <td class="applying-actions">
                             <button class="reject-button">Reject</button>
                             <button class="approve-button">Approve</button>
                           </td>
                         </tr>
                       <% end %>
                     </table>
                     <% else %>
                     <p class="no-pending-msg">There's no pending application.</p>
                   <% end %>
                 </div>
                 <!--===========================================================-->
            </div>
          </article>
        </section>
        <section class="panel b-red" id="3">
          <article class="panel__wrapper">
            <div class="panel__content">
              <h1 class="panel__headline"><i class="fa fa-music"></i>&nbsp;Music</h1>
              <div class="panel__block"></div>
              <!--=========================================================-->

              <!--===========================================================-->
            </div>
          </article>
        </section>
        <section class="panel b-green" id="4">
          <article class="panel__wrapper">
            <div class="panel__content">
              <h1 class="panel__headline"><i class="fa fa-paper-plane"></i>&nbsp;Paper</h1>
              <div class="panel__block"></div>
              <!--=========================================================-->
              <!--===========================================================-->
            </div>
          </article>
        </section>
        <a href="/users" class="logo" target="_blank">
         <img class="logo" src="https://s3-us-west-2.amazonaws.com/s.cdpn.io/45226/ettrics-logo.svg" alt="" />
        </a>
</div>
