<h1>Home page</h1>

<div>
  <a href="/users/new">sign up</a>
  <% if session[:user_id] %>
    <form action="/logout" method="post">
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <input type="hidden" value="delete" name="_method">
      <button>Logout</button>
    </form>
  <% else %>
    <a href="/login"> log in </a> 
  <% end %>
  
</div>
