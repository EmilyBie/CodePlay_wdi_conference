<h1 class="section-title">Schedule</h1>
<div class="event-speakers">
     <% @talks.each do |talk| %>
       <hr class="vertical">
       <div class="talk-card">
           <div class='left'><%=talk.user.name%></div>
           <div class="middle">
             <img src="<%= talk.user.img%>" alt="">
           </div>
           <div class='right'>
               <p>
                 <%= talk.topic%>
               </p>
           </div>
       </div>
     <% end %>
</div>


<script type="text/javascript">

   $('.event-speakers').on('click','img',function(){
     $(this).closest('.middle').next('.right').find('p').css('width','90%');
   });

   $('.event-speakers').on('click','p',function(){
     $(this).css('width','0');
   });


</script>
