<a href="/"><button class="back-btn-two">Back</button></a>

<div class="login-div" style="<%= 'display: none;' if request.path == '/login'%>">
  <% if (logged_in?) %>
    <button class="login-btn"><a href="/logout">Log Out</a></button>
  <% end %>

  <% if (!logged_in?) %>
    <a href="/login"><button class="login-btn">Log In</button></a>
  <% end %>
</div>

<div class="form-div">
  <h1 style="text-align:center;"> Sign Up </h1>
  <form action="/users" method="post">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <label for="">Name</label>
    <input type="text" name="name">
    <label for="">Email</label>
    <input type="email" name="email">
    <label for="">Password</label>
    <input type="password" name="password">

    <button class="sign-in-btn">Sign Up</button>
  </form>
</div>
