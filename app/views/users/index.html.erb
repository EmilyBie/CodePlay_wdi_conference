<div id="edit-page">
  <a href="/">Back To Main</a>

  <h1 id="greeting">Hello <%= current_user.name%>,</h1>

  <div id="show-profile">
    <img id="img-profile" src="<%= current_user.img%>" alt="">
  </div>

  <div id="profile-section">
    <ul id="edit-profile">
      <li><a href="/users/<%= @user.id %>/edit">Edit Profile </a></li>
      <li><a class="apply-btn" href="">Apply as a Speaker</a></li>
    </ul>
  </div>

  <div id="desc-section">
    <p><%= current_user.desc%></p>
  </div>
</div>


<div id="speaker-form">
  <div class="application-form">
    <i class="fa fa-close fa-2x close-btn" aria-hidden="true"></i>

    <form action="/apply" method="post">
     <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <label for=""><strong>Topic :</strong></label>
    <input type="text" name="topic">
    <label for=""><strong>Content :</strong></label>
    <textarea name="content" rows='20'></textarea>
    <br>
    <select name="event" id="select_event">
      <% @events.each do |event| %>
        <option value="<%= event.id%>"><%= event.name%></option>
      <% end %>
    </select>
    <br>
    <button class="sign-in-btn">Submit</button>

    </form>
  </div>
</div>
